<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mizukamitakamasa.qiitaclient">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".QiitaClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="android" android:host="qiita.com"
                      android:path="/authorize"/>
            </intent-filter>
        </activity>
        <activity android:name=".ArticleActivity">
        </activity>
        <meta-data
            android:name="auth_url"
            android:value="${authUrl}"></meta-data>
        <meta-data
            android:name="client_id"
            android:value="${clientId}"></meta-data>
        <meta-data
            android:name="redirect_url"
            android:value="${redirectUrl}"></meta-data>
        <meta-data
            android:name="scope"
            android:value="${scope}"></meta-data>
        <meta-data
            android:name="status"
            android:value="${status}"></meta-data>
        <meta-data
            android:name="client_secret"
            android:value="${clientSecret}"></meta-data>
    </application>

</manifest>